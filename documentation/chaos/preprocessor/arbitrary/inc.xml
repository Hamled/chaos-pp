<?xml version="1.0" encoding="UTF-8"?>
<header name="chaos/preprocessor/arbitrary/inc.h" author="Paul Mensonides" date="2003-2004">
<overview>
	The <self/> header defines an <link id="arbitrary-precision"/> incrementation operator.
</overview>

<macro id="INC_AP" group="decrementation">
	<abstract>
		The <INC_AP/> macro increments an <link id="arbitrary-precision value"/>.
	</abstract>
	<usage>
		<syntax><INC_AP/>(x)</syntax>
		<param id="x">
			The <link id="arbitrary-precision value"/> to be incremented.
		</param>
	</usage>
	<para>
		This macro results in an <link id="arbitrary-precision value"/> one greater than <var>x</var>.
	</para>
	<x-reference id="DEC_AP"/>
	<listing>
		#include <chaos-preprocessor-arbitrary-demote.h/>
		#include <chaos-preprocessor-arbitrary-inc.h/>
		#include <chaos-preprocessor-arbitrary-literal.h/>
		
		<DEMOTE_AP/>(
		    <INC_AP/>(<LITERAL_AP/>(1 2 3))
		)
		// 124
		
		<DEMOTE_AP/>(
		    <INC_AP/>(<LITERAL_AP/>((-)1 2 3))
		)
		// -122
		
		<DEMOTE_AP/>(
		    <INC_AP/>(<LITERAL_AP/>((-)1))
		)
		// 0
	</listing>
	<derivative id="INC_AP_ID"/>
	<derivative id="INC_AP_" lang="C99"/>
</macro>

</header>
